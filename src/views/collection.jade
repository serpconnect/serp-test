block content
    div.profile-area-wrapper
        a(href="/profile.html")#profile.view-area-tab.unactive-tab profile
        a(href="/collection.html")#general.view-area-tab.active-tab general
        a(href="/collection/users.html")#users.view-area-tab.unactive-tab users
        a(href="/collection/entries.html")#entries.view-area-tab.unactive-tab entries
        div.profile-container
            div.profile-content
                span#name.user-email name
                span.user-email  #
                span#id.user-email id
                span#owner.user-email owner
                div.user-options
                    div
                    button#leave.btn leave collection
                    button#export.btn export collection
                div.collections-main-title statistics
                    p.collection-stats 0 entries, 0 members
    div.inner-content
        h3#taxonomy-extension.text-title 
        div.overview-container
            div.ov-tax-container
                span#taxonomy
                div.center Expand your SERP taxonomy
            div#newFacet.newFacetContainer
                h2#newFacetBox  Extend Taxonomy
                div.divider-wrapper   
                    div.proj-ui-title-divider
                    h3#facetName effect
                    div.proj-ui-title-divider
                div.proj-ui-input-container  
                    div.proj-ui-input-containers
                        label.proj-ui-label(for="idInput") id
                        input#idInput.proj-ui-inputbox(type='text', name='id', value=id)
                    div.proj-ui-input-containers
                        label.proj-ui-label(for="nameInput") name
                        input#nameInput.proj-ui-inputbox(type='text', name='name', value=name)
                div.proj-ui-btn-wrapper
                    button#submitBtn.btn extend
                    button#removeBtn.btn remove
                div.proj-ui-btn-wrapper
                    button#saveBtn.btn save
                    button#resetBtn.btn reset
                    button#backBtn.btn undo
          