extends base
block view-specific-scripts
    script(src="js/util/el.js")
    script(src="js/components/kick-user-modal.js")
    script(src="js/components/delete-account-modal.js")
    script(src="js/components/create-collection-modal.js")
    script(src="js/components/invite-user-modal.js")
    script(src="js/components/change-password-modal.js")
    script(src="js/components/fuzzy-kick-user-modal.js")
    script(src="js/modal.js")
    script(src="js/profile.js")
    script(src="js/vendor/fuse.min.js")
    script(src="js/util/awesomplete.js")
block content
    div.profile-area-wrapper
        a(href="/profile.html").view-area-tab.active-tab profile
        a(href="/invitations.html")#invitations.view-area-tab.unactive-tab invitations
        div.profile-container
            div.profile-content
                div.user-email <email>
                div.user-options
                    div#change change password
                    div#delete delete account
                div.collections-main-title your collections
                    div#create.additional-data create new collection +
